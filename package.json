{
  "name": "audexis",
  "private": true,
  "version": "0.2.3-alpha",
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "pnpm --filter desktop tauri dev",
    "dev:www": "pnpm --filter www dev",
    "dev:all": "pnpm --parallel --filter desktop tauri dev --filter www dev",
    "build": "pnpm --filter desktop build",
    "build:www": "pnpm --filter www build",
    "build:all": "pnpm --recursive build",
    "tauri": "pnpm --filter desktop tauri",
    "lint": "pnpm --recursive lint",
    "clean": "pnpm --recursive exec rm -rf node_modules dist .next"
  },
  "devDependencies": {
    "@types/node": "^22.15.30",
    "typescript": "~5.6.2"
  }
}
