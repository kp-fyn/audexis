---
import MacbookPro from "../components/Macbook.astro";
import Button from "../components/Button.astro";
import Layout from "../layouts/Layout.astro";
import CoreFeature from "../components/CoreFeature.astro";
import FeatureSection from "../components/FeatureSection.astro";
import FeatureCard from "../components/FeatureCard.astro";
import DownloadButton from "../components/DownloadButton.astro";
// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
const supportedFiles = [
  "m4a",
  "mp4",
  "qt",
  "m4b",
  "m4v",
  "mov",
  "ogg",
  "opus",
  "oga",
  "spx",
  "ogv",
  "mp3",
  "mp2",
  "mp1",
  "flac",
];
---

<Layout
  title="Home"
  description="A powerful and intuitive audio metadata editor for macOS and Windows. Edit MP3 tags, manage album art, batch rename files, and organize your music library with ease. Free & Open Source."
>
  <div class="flex flex-col w-full pt-12">
    <section class="flex flex-col w-full items-center text-center pt-12 pb-32">
      <h1
        class="text-6xl sm:text-7xl md:text-8xl text-center font-bold tracking-tight text-foreground"
      >
        Audio Metadata
        <br />
        <span class="text-primary">Simplified</span>
      </h1>
      <span class="w-full mt-4 max-w-3xl text-muted-foreground text-lg">
        A powerful and intuitive audio metadata editor for macOS and Windows.
        Edit MP3 tags, manage album art, batch rename files, and organize your
        music library with ease. Free & Open Source.
      </span>
      <div class="mt-8 flex gap-4">
        <DownloadButton showOtherPlatforms />
      </div>

      <div class="flex w-full flex-1 justify-center mt-6">
        <MacbookPro />
      </div>
    </section>

    <FeatureSection
      title=" Powerful Audio Tag Editing"
      description={`  Edit all common audio metadata fields including title, artwork, artist,
        album, album artist, track number, genre, year, composer and more. With
        full support for multiple values per field.`}
    >
      <CoreFeature
        title="Artwork & Embedded Images"
        switched={true}
        alt="Audexis interface showing embedded artwork manager with multiple album covers including front cover, back cover, and disc art"
        img="/img-dark.webp"
        description={` Audexis lets you view, add, replace, and remove multiple embedded images
      within a single audio file, not just the main album cover. Many formats
      support secondary artwork like back covers, disc images, logos, and
      booklets, and Audexis gives you full control over all of them. Whether
      you're managing high-resolution album art or cleaning up unnecessary
      images, you can easily organize and edit every artwork entry in one place.`}
      />
      <CoreFeature
        title="Pattern-Based Renaming"
        switched={false}
        alt="Pattern-based file renaming interface in Audexis showing customizable metadata tag patterns with before and after filename preview"
        img="/renaming-dark.webp"
        description={`Audexis includes a powerful renaming system that lets you
            automatically rename files using customizable patterns built from
            any metadata tag. You can combine fields like artist, album, track
            number, title, year, or even custom tags to create consistent naming
            formats that match your library's organization style. Audexis
            generates clean, predictable filenames with a single click, perfect
            for keeping large collections neat and searchable.`}
      />
    </FeatureSection>
    <FeatureSection
      title=" Customization & Workflow"
      description={` Tailor Audexis to fit your workflow and aesthetic preferences with a
        variety of customization options.`}
    >
      <div class="flex flex-col lg:flex-row gap-x-12 gap-y-12 mt-12">
        <div class="flex flex-col mt-12">
          <div
            class="flex flex-col border-b border-border w-full lg:max-w-xl pb-5"
          >
            <h3 class="text-2xl font-semibold">Theme Options</h3>
            <span class="text-muted-foreground text-base">
              Choose between light, dark, or system themes to match your
              appearance preferences.
            </span>
          </div>
          <div
            class="flex flex-col border-b border-border w-full lg:max-w-xl py-8"
          >
            <h3 class="text-2xl font-semibold">Column Customization</h3>
            <span class="text-muted-foreground text-base">
              Customize visible columns, reorder fields, and focus only on the
              metadata you care about.
            </span>
          </div>
          <div
            class="flex flex-col border-b border-border w-full lg:max-w-xl py-8"
          >
            <h3 class="text-2xl font-semibold">Flexible Layouts</h3>
            <span class="text-muted-foreground text-base">
              Adjust the layout to suit your workflow, whether you prefer a
              compact view or detailed information. You can also increase and
              decrease the sidebar width.
            </span>
          </div>
          <div class="flex flex-col w-full lg:max-w-xl py-8">
            <h3 class="text-2xl font-semibold">Sidebar Customization</h3>
            <span class="text-muted-foreground text-base">
              Choose the tags you want to edit. Where it is the title or the
              album cover you chose whats on there.
            </span>
          </div>
        </div>
        <img
          src="/settings-dark.webp"
          alt="Settings Page"
          class="theme-img w-full lg:max-w-xl xl:max-w-2xl ml-auto rounded-lg border border-border shadow-xl shadow-primary-washed hover:shadow-2xl transition-shadow duration-300"
        />
      </div>
    </FeatureSection>
    <FeatureSection
      title="Batch editing"
      description={` Batch Editing, Done Right Apply precise metadata changes across multiple
        files at once. With full support for mixed values, multi-value fields,
        and safe previews before saving.`}
    >
      <div
        class="w-full grid grid-cols-1 md:grid-cols-2 gap-x-4 gap-y-6 xl:grid-cols-3 mt-12 items-center justify-center place-items-center"
      >
        <FeatureCard
          title="Multi-File Selection"
          description={`Edit metadata across dozens or hundreds of files at once. Audexis
            lets you select multiple tracks and apply changes in a single pass,
            saving you from repetitive, file-by-file edits when working with
            albums, EPs, or large collections.`}
        />

        <FeatureCard
          title="Smart Mixed-Value Handling"
          description={`When selected files contain different values for the same field,
            Audexis clearly indicates mixed values instead of guessing. You stay
            in control of what gets changed, ensuring existing metadata is never
            overwritten by accident.`}
        />

        <FeatureCard
          title="Edit Only What You Change"
          description={`Audexis only writes the fields you explicitly modify. Unchanged tags
            are left untouched, making batch edits safe and predictable even
            when working with files that already contain detailed metadata.`}
        />

        <FeatureCard
          title="Multi-Value Tag Support"
          description={`Some fields support multiple values, such as artists, genres, or
            composers. Audexis fully supports adding, removing, and reordering
            individual values without flattening or losing existing data.`}
        />

        <FeatureCard
          title="Consistent Results Across Files"
          description={`Batch edits are applied consistently across all selected files,
            regardless of their original metadata differences. This makes it
            easy to standardize tags across entire albums or libraries in one
            step.`}
        />
        <FeatureCard
          title="Undo & Redo"
          description={`Audexis keeps track of your changes so you can undo or redo edits
            across multiple files, even after large operations. If something
            doesnâ€™t look right, you can step back instantly without losing your
            place or reloading your library.`}
        />
      </div>
    </FeatureSection>

    <FeatureSection
      title="Supports Your Music Library"
      description="  Works with the most popular audio formats"
      centered
    >
      <div class="flex flex-wrap justify-center gap-4 mt-4">
        {
          supportedFiles.map((format) => (
            <div class="px-6 py-3 bg-muted rounded-lg border border-border">
              <span class="font-semibold text-foreground">
                {format.toUpperCase()}
              </span>
            </div>
          ))
        }
      </div>
    </FeatureSection>

    <section
      class="mt-32 px-4 lg:px-24 py-12 bg-primary-washed flex flex-col lg:flex-row gap-6 rounded-lg"
    >
      <div class="flex flex-col">
        <h3 class="text-4xl font-semibold text-foreground mb-2">
          Take Control of Your Audio Library
        </h3>
        <p class="text-muted-foreground max-w-xl">
          Audexis empowers you to effortlessly manage and edit your audio
          metadata, ensuring your music collection is always organized and
          up-to-date.
        </p>
      </div>
      <div
        class="flex flex-col sm:flex-row lg:ml-auto items-center justify-center gap-4 mt-8"
      >
        <DownloadButton />
        <a
          href="https://github.com/kp-fyn/audexis"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 rounded-lg border border-border px-8 py-4 text-lg transition-colors hover:bg-muted"
        >
          <svg
            class="h-5 w-5"
            viewBox="0 0 98 96"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <g clip-path="url(#clip0_730_27126)">
              <path
                d="M41.4395 69.3848C28.8066 67.8535 19.9062 58.7617 19.9062 46.9902C19.9062 42.2051 21.6289 37.0371 24.5 33.5918C23.2559 30.4336 23.4473 23.7344 24.8828 20.959C28.7109 20.4805 33.8789 22.4902 36.9414 25.2656C40.5781 24.1172 44.4062 23.543 49.0957 23.543C53.7852 23.543 57.6133 24.1172 61.0586 25.1699C64.0254 22.4902 69.2891 20.4805 73.1172 20.959C74.457 23.543 74.6484 30.2422 73.4043 33.4961C76.4668 37.1328 78.0937 42.0137 78.0937 46.9902C78.0937 58.7617 69.1934 67.6621 56.3691 69.2891C59.623 71.3945 61.8242 75.9883 61.8242 81.252L61.8242 91.2051C61.8242 94.0762 64.2168 95.7031 67.0879 94.5547C84.4102 87.9512 98 70.6289 98 49.1914C98 22.1074 75.9883 6.69539e-07 48.9043 4.309e-07C21.8203 1.92261e-07 -1.9479e-07 22.1074 -4.3343e-07 49.1914C-6.20631e-07 70.4375 13.4941 88.0469 31.6777 94.6504C34.2617 95.6074 36.75 93.8848 36.75 91.3008L36.75 83.6445C35.4102 84.2188 33.6875 84.6016 32.1562 84.6016C25.8398 84.6016 22.1074 81.1563 19.4277 74.7441C18.375 72.1602 17.2266 70.6289 15.0254 70.3418C13.877 70.2461 13.4941 69.7676 13.4941 69.1934C13.4941 68.0449 15.4082 67.1836 17.3223 67.1836C20.0977 67.1836 22.4902 68.9063 24.9785 72.4473C26.8926 75.2227 28.9023 76.4668 31.2949 76.4668C33.6875 76.4668 35.2187 75.6055 37.4199 73.4043C39.0469 71.7773 40.291 70.3418 41.4395 69.3848Z"
                fill="currentColor"></path>
            </g>
            <defs>
              <clipPath id="clip0_730_27126">
                <rect width="98" height="96" fill="currentColor"></rect>
              </clipPath>
            </defs>
          </svg>

          View on GitHub
        </a>
      </div>
    </section>
  </div>
</Layout>
