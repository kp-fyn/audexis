{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "audexis",

  "version": "0.9.5",
  "identifier": "com.audexis",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },

  "app": {
    "macOSPrivateApi": true,

    "windows": [],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "name": "Audexis Audio",
        "description": "Audexis Audio File",
        "role": "Editor",
        "mimeType": "audio/mp4",
        "ext": ["m4a", "m4b"]
      },
      {
        "name": "Audexis Video",
        "description": "Audexis Video File",
        "role": "Editor",
        "mimeType": "video/mp4",
        "ext": ["mp4"]
      },
      {
        "name": "Audexis Video",
        "description": "Audexis Video File",
        "role": "Editor",
        "mimeType": "video/x-m4v",
        "ext": ["m4v"]
      },
      {
        "name": "Audexis QuickTime",
        "description": "Audexis QuickTime File",
        "role": "Editor",
        "mimeType": "video/quicktime",
        "ext": ["mov", "qt"]
      },
      {
        "name": "Audexis Ogg",
        "description": "Audexis Ogg File",
        "role": "Editor",
        "mimeType": "audio/ogg",
        "ext": ["ogg", "oga", "spx"]
      },
      {
        "name": "Audexis Opus",
        "description": "Audexis Opus File",
        "role": "Editor",
        "mimeType": "audio/opus",
        "ext": ["opus"]
      },
      {
        "name": "Audexis Ogg Video",
        "description": "Audexis Ogg Video File",
        "role": "Editor",
        "mimeType": "video/ogg",
        "ext": ["ogv"]
      },
      {
        "name": "Audexis MP3",
        "description": "Audexis MPEG Audio File",
        "role": "Editor",
        "mimeType": "audio/mpeg",
        "ext": ["mp3", "mp2", "mp1"]
      },
      {
        "name": "Audexis FLAC",
        "description": "Audexis FLAC File",
        "role": "Editor",
        "mimeType": "audio/flac",
        "ext": ["flac"]
      }
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": "entitlements.plist"
    },
    "windows": {
      "signCommand": "trusted-signing-cli -e https://eus.codesigning.azure.net/ -a Audexis -c Audexis -d Audexis %1"
    },
    "publisher": "kp-fyn",
    "homepage": "https://github.com/kp-fyn/audexis"
  },
  "plugins": {
    "updater": {
      "active": true,
      "createUpdaterArtifacts": true,
      "endpoints": [
        "https://github.com/kp-fyn/audexis/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEYwN0U3RDA5NDhBMjcxMjMKUldRamNhSklDWDErOE1pdHZyRWlKaVlMTjRJNTlQN1pyT08rRUxISzhyOHNPVEF2SE1sTTFnN2gK"
    }
  }
}
